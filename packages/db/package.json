{
  "name": "@hamilton/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./lib/client": {
      "types": "./dist/lib/client.d.ts",
      "default": "./src/lib/client/index.ts"
    },
    "./lib/schema": {
      "types": "./dist/lib/schema.d.ts",
      "default": "./src/lib/schema/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "pnpm with-env drizzle-kit push",
    "seed": "pnpm with-env tsx src/scripts/seed.ts",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@hamilton/validators": "workspace:*",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.44.1",
    "drizzle-zod": "^0.8.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@hamilton/eslint-config": "workspace:*",
    "@hamilton/prettier-config": "workspace:*",
    "@hamilton/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.20.3",
    "typescript": "catalog:"
  },
  "prettier": "@hamilton/prettier-config"
}
